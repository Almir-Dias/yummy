
<div class="container h-100 d-flex align-items-center justify-content-center">
  <div class="row justify-content-center">
    <div class="col-10 text-center">
    <h2 class="mb-4">Cadastre-se no Yummy</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, placeholder: 'Nome', label: false %>
          <%= f.input :last_name,  placeholder: 'Sobrenome', label: false %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "email", placeholder: 'e-mail' }%>
          <%= f.input :password,
                      required: true,
                      label: false,
                      #hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", placeholder: 'Senha', label: false } %>
          <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      input_html: { autocomplete: "confirmation", placeholder: 'Confirmar', label: false } %>
        </div>

        <%= f.button :submit, "Cadastrar",class: 'btn btn-warning rounded-4 w-100' %>
      <% end %>

         </div>
  </div>
</div>
