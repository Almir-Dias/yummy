<%= turbo_frame_tag "restaurants", target: "_top" do %>
  <div class= "d-flex gap-4 justify-content-center">
    <%= link_to filter_path, data: { turbo_frame: :modal }, class: "filter-icon-bar" do %>
        <i class="fa-solid fa-bars"></i>
      <% end %>
      <%= link_to map_path, data: { turbo_frame: :modal }, class: "filter-icon-map mt-2" do %>
        <i class="fa-solid fa-location-dot"></i>
      <% end %>
  </div>


  <div class="container mt-3">
    <div class="card-container col-10 text-center" >
       <% if @restaurants.any? %>
        <% @restaurants.each do |restaurant| %>
          <div class="restaurant-card">
            <div class="card-image">
              <%= link_to restaurant_path(restaurant) do %>
                  <%= image_tag restaurant.photo_url.present? ? restaurant.photo_url : 'Restaurant_aleatorio.jpeg' %>
              <% end %>
            </div>
            <div class="card-info">
              <h3>
                <%= restaurant.name %>
              </h3>
              <p>
                <p class="carousel-card-rating"><%= star_rating(restaurant.rating) %></p>
                <p><%= price_display(restaurant.price) if restaurant.price.present? %></p>
              </p>
            </div>
          </div>
        <% end %>
        <% else %>
          Nenhum restaurante encontrado ğŸ˜¢
        <% end %>
    </div>
  </div>
<% end %>




