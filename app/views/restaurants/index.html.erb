<%= turbo_frame_tag "restaurants" do %>
  <div class= "fixed-top d-flex gap-4 justify-content-center">
    <%= link_to filter_path, data: { turbo_frame: :modal }, class: "filter-icon" do %>
        <i class="fa-solid fa-bars"></i>
      <% end %>
      <%= link_to map_path, data: { turbo_frame: :modal }, class: "filter-icon" do %>
        <i class="fa-solid fa-location-dot"></i>
      <% end %>
  </div>


  <div class="container mt-5">
    <div class="card-container col-10 text-center" >
       <% if @restaurants.any? %>
        <% @restaurants.each do |restaurant| %>
          <div class="restaurant-card">
            <div class="card-image">
              <% if restaurant.photo_url.present?%>
                <%= link_to restaurant_path(restaurant) do %>
                  <%= image_tag restaurant.photo_url %>
                <% end %>
              <% end %>

            </div>
            <div class="card-info">
              <h3>
                <%= restaurant.name %>
              </h3>
              <p>
                Nota: <%= restaurant.rating %>
                Preco: <%= restaurant.price %>
              </p>
            </div>
          </div>
        <% end %>
        <% else %>
          Nenhum restaurante encontrado ğŸ˜¢
        <% end %>
    </div>
  </div>
<% end %>




